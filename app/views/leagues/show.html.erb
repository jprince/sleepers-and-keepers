<h2><%= @league.name %></h2>

<%= link_to('Teams', league_teams_path(@league.id)) %>
<%= link_to("#{ if @draft_status == 'Not Started' then 'View draft order' else 'View draft results' end }", league_draft_results_path(@league.id)) %>

<%
  unless @user.teams.any? { |team| team.league_id == @league.id } ||
    @league.teams.length >= @league.size
%>
  <%= link_to('New Team', new_league_team_path(@league.id)) %>
<% end %>

<% if @user.id == @owner_id %>
  <%= link_to('Set draft order', league_draft_order_path(@league.id)) %>

  <% if @draft_status == 'Not Started' and @league_full %>
    <%= link_to('Start draft', league_draft_path(@league.id)) %>
  <% end %>
<% end %>

<% if @draft_status == 'In Progress' %>
  <%= link_to('Join draft', league_draft_path(@league.id)) %>
<% end %>

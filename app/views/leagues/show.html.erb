<h2><%= @league.name %></h2>

<%= link_to('Teams', league_teams_path(@league.id)) %>

<%
  unless @user.teams.any? { |team| team.league_id == @league.id } ||
    @league.teams.length >= @league.size
%>
  <%= link_to('New Team', new_league_team_path(@league.id)) %>
<% end %>

<% if @user.id == @owner_id %>
  <%= link_to('Set draft order', league_draft_order_path(@league.id)) %>
<% end %>
